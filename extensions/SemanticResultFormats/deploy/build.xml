<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="semanticresultformats" name="Semantic Result formats">
	<target name="semanticresultformats" depends="versionhint">
		<delete dir="bin/zip" />

		<delete>
			<fileset dir="bin" includes="smwhalo-srf*.zip" />
		</delete>
		<mkdir dir="bin/zip" />

		<copy todir="bin/zip/extensions/SemanticResultFormats">
			<fileset dir="../">
				<exclude name="**/.svn, **/CVS" />
				<exclude name="deploy/**" />
				<exclude name="**/.project" />
			</fileset>
		</copy>

		<zip destfile="bin/semanticresultformats.zip" basedir="bin/zip" />
		<delete dir="bin/zip" />
		<exec executable="php">
			<arg value="../../../buildtools/renameDeployable.php" />
			<arg value="../deploy.xml" />
			<arg value="bin/semanticresultformats.zip" />
		</exec>
	</target>
	<target name="versionhint">
		<exec executable="php">
			<arg value="../../../buildtools/replaceVersionHint.php" />
			<arg value="../deploy.xml" />
			<arg value="../SRF_Settings.php" />
		</exec>
	</target>

</project>
