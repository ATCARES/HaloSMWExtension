<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="semanticresultformats" name="Semantic Result formats">
	<target name="semanticresultformats" depends="versionhint">
		<delete dir="bin/zip" />

		<delete>
			<fileset dir="bin" includes="smwhalo-srf*.zip" />
		</delete>
		<mkdir dir="bin/zip" />

		<copy todir="bin/zip/extensions/SemanticResultFormats">
			<fileset dir="../">
				<exclude name="**/.svn, **/CVS" />
				<exclude name="deploy/**" />
				<exclude name="**/.project" />
			</fileset>
		</copy>

		<zip destfile="bin/semanticresultformats.zip" basedir="bin/zip" />
		<delete dir="bin/zip" />
		<exec executable="php">
			<arg value="../../../buildtools/renameDeployable.php" />
			<arg value="../deploy.xml" />
			<arg value="bin/semanticresultformats.zip" />
		</exec>
	</target>
	<target name="versionhint">
		<property environment="env" />
		<exec executable="php">
			<arg value="../../../buildtools/replaceVersionHint.php" />
			<arg value="../deploy.xml" />
			<arg value="../SemanticResultFormats.php" />
			<arg value="${env.BUILD_NUMBER}" />
		</exec>
	</target>
	<target name="patches" depends="checkos">
		<echo message="${patchtool}" />
		<exec executable="php">
			<arg value="../../../patches/patch.php" />
			<arg value="-d" />
			<arg value="${basedir}/../../../" />
			<arg value="-p" />
			<arg value="../patch.txt" />
			<arg value="--patchtool" />
			<arg value="${patchtool}" />
		</exec>
	</target>


	<target name="checkos">
		<condition property="patchtool" value="${basedir}/../../../deployment/tools/patch.exe">
			<os family="windows" />
		</condition>
		<condition property="patchtool" value="patch">
			<os family="unix" />
		</condition>
	</target>
</project>
