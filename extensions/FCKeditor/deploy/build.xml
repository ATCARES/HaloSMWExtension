<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="wysiwyg">
	<target name="build">
		<delete dir="bin/zip" />
		<delete file="bin/smwhalo-wysiwyg-${version}.zip" />
		<mkdir dir="bin/zip" />

		<copy todir="bin/zip/extensions/FCKeditor/">
			<fileset file="../**">
				<exclude name="**/.svn, **/CVS" />
				<exclude name="**/deploy**" />
                                <exclude name="**/tests/**" />
			</fileset>
		</copy>
		<zip destfile="bin/smwhalo-wysiwyg-${version}.zip"
                     basedir="bin/zip"
                />
		<delete dir="bin/zip" />
	</target>
</project>
